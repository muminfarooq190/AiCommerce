    const orderStatusSelect = document.getElementById('orderStatusSelect');
    const saveStatusBtn = document.getElementById('saveStatusBtn');
    const cancelStatusEditBtn = document.getElementById('cancelStatusEditBtn');
    const orderDetailId = document.getElementById('orderDetailId');

    // Sidebar toggle for mobile
    sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('-translate-x-full');
    });

    // Render orders table
    function renderOrdersTable() {
        ordersTableBody.innerHTML = '';

        orders.forEach(order => {
            const statusBadgeClasses = {
                pending: 'bg-yellow-100 text-yellow-800',
                processing: 'bg-purple-100 text-purple-800',
                shipped: 'bg-blue-100 text-blue-800',
                delivered: 'bg-green-100 text-green-800',
                cancelled: 'bg-red-100 text-red-800',
                refunded: 'bg-gray-100 text-gray-800'
            };

            const paymentBadgeClasses = {
                paid: 'bg-green-100 text-green-800',
                unpaid: 'bg-yellow-100 text-yellow-800',
                refunded: 'bg-gray-100 text-gray-800',
                failed: 'bg-red-100 text-red-800'
            };

            const row = document.createElement('tr');
            row.className = 'hover:bg-gray-50 cursor-pointer';
            row.innerHTML = `
                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-ai-blue">${order.id}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 h-10 w-10">
                            <img class="h-10 w-10 rounded-full" src="${order.customer.avatar}" alt="${order.customer.name}">
                        </div>
                        <div class="ml-4">
                            <div class="text-sm font-medium text-gray-900">${order.customer.name}</div>
                            <div class="text-sm text-gray-500">${order.customer.email}</div>
                        </div>
                    </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">${new Date(order.date).toLocaleDateString()}</div>
                    <div class="text-sm text-gray-500">${new Date(order.date).toLocaleTimeString()}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">$${order.amount.toFixed(2)}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="status-badge ${statusBadgeClasses[order.status]}">${order.status.charAt(0).toUpperCase() + order.status.slice(1)}</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <button class="text-ai-blue hover:text-ai-dark mr-3 view-order-btn" data-order-id="${order.id}">
                        <i class="fas fa-eye"></i>
                    </button>
                    <button class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </td>
            `;

            ordersTableBody.appendChild(row);
        });

        // Add event listeners to view buttons
        document.querySelectorAll('.view-order-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.stopPropagation();
                const orderId = btn.getAttribute('data-order-id');
                showOrderDetails(orderId);
            });
        });

        // Add event listeners to table rows
        document.querySelectorAll('#ordersTableBody tr').forEach(row => {
            row.addEventListener('click', () => {
                const orderId = row.querySelector('.view-order-btn').getAttribute('data-order-id');
                showOrderDetails(orderId);
            });
        });
    }

    // Show order details modal
    function showOrderDetails(orderId) {
        const order = orders.find(o => o.id === orderId);
        if (!order) return;

        // Set order ID
        orderDetailId.textContent = order.id;

        // Render order items
        orderItemsList.innerHTML = '';
        order.items.forEach(item => {
            const itemElement = document.createElement('div');
            itemElement.className = 'flex items-start pb-4 border-b border-gray-200 last:border-b-0 last:pb-0';
            itemElement.innerHTML = `
                <div class="flex-shrink-0 h-16 w-16 rounded-md overflow-hidden bg-gray-100">
                    <img src="${item.image}" alt="${item.name}" class="h-full w-full object-cover">
                </div>
                <div class="ml-4 flex-1">
                    <div class="flex items-center justify-between">
                        <h4 class="text-sm font-medium text-gray-900">${item.name}</h4>
                        <p class="text-sm font-medium text-gray-900">$${item.price.toFixed(2)}</p>
                    </div>
                    <p class="text-sm text-gray-500 mt-1">Qty: ${item.quantity}</p>
                    ${item.options ? `<p class="text-xs text-gray-500 mt-1">${item.options}</p>` : ''}
                </div>
            `;
            orderItemsList.appendChild(itemElement);
        });

        // Set order totals
        orderSubtotal.textContent = `$${order.subtotal.toFixed(2)}`;
        orderShipping.textContent = `$${order.shipping.toFixed(2)}`;
        orderTax.textContent = `$${order.tax.toFixed(2)}`;
        orderTotal.textContent = `$${order.total.toFixed(2)}`;

        // Set customer note
        customerNote.textContent = order.customerNote || 'No customer note';

        // Set status and payment info
        const statusBadgeClasses = {
            pending: 'bg-yellow-100 text-yellow-800',
            processing: 'bg-purple-100 text-purple-800',
            shipped: 'bg-blue-100 text-blue-800',
            delivered: 'bg-green-100 text-green-800',
            cancelled: 'bg-red-100 text-red-800',
            refunded: 'bg-gray-100 text-gray-800'
        };

        const paymentBadgeClasses = {
            paid: 'bg-green-100 text-green-800',
            unpaid: 'bg-yellow-100 text-yellow-800',
            refunded: 'bg-gray-100 text-gray-800',
            failed: 'bg-red-100 text-red-800'
        };

        currentStatusBadge.className = `status-badge ${statusBadgeClasses[order.status]}`;
        currentStatusBadge.textContent = order.status.charAt(0).toUpperCase() + order.status.slice(1);

        paymentStatusBadge.className = `status-badge ${paymentBadgeClasses[order.paymentStatus]}`;
        paymentStatusBadge.textContent = order.paymentStatus.charAt(0).toUpperCase() + order.paymentStatus.slice(1);

        // Set customer and shipping info
        paymentMethod.textContent = order.paymentMethod;
        customerName.textContent = order.customer.name;
        customerEmail.textContent = order.customer.email;
        customerPhone.textContent = order.customer.phone;
        shippingAddress.textContent = order.shippingAddress;
        shippingMethod.textContent = order.shippingMethod;
        trackingNumber.textContent = order.trackingNumber || 'Not shipped yet';

        // Set current status in select
        orderStatusSelect.value = order.status;

        // Show modal
        orderDetailModal.classList.remove('hidden');
    }

    // Close order detail modal
    closeOrderDetailModal.addEventListener('click', () => {
        orderDetailModal.classList.add('hidden');
    });

    // Edit status button
    editStatusBtn.addEventListener('click', () => {
        statusEditSection.classList.remove('hidden');
    });

    // Cancel status edit
    cancelStatusEditBtn.addEventListener('click', () => {
        statusEditSection.classList.add('hidden');
    });

    // Save status
    saveStatusBtn.addEventListener('click', () => {
        const newStatus = orderStatusSelect.value;
        const statusBadgeClasses = {
            pending: 'bg-yellow-100 text-yellow-800',
            processing: 'bg-purple-100 text-purple-800',
            shipped: 'bg-blue-100 text-blue-800',
            delivered: 'bg-green-100 text-green-800',
            cancelled: 'bg-red-100 text-red-800',
            refunded: 'bg-gray-100 text-gray-800'
        };

        currentStatusBadge.className = `status-badge ${statusBadgeClasses[newStatus]}`;
        currentStatusBadge.textContent = newStatus.charAt(0).toUpperCase() + newStatus.slice(1);

        statusEditSection.classList.add('hidden');

        // In a real app, you would save the status change to your backend here
        alert(`Order status updated to ${newStatus}`);
    });

    // Initialize the page
    document.addEventListener('DOMContentLoaded', () => {
        renderOrdersTable();
    });
</script>