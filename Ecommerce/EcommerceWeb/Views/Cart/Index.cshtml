<script>
 
    // Shipping option selection
    const shippingOptions = document.querySelectorAll('.shipping-option');
    shippingOptions.forEach(option => {
        option.addEventListener('click', function() {
            // Remove all selected states
            shippingOptions.forEach(opt => {
                opt.classList.remove('selected');
                opt.querySelector('.w-3.h-3').classList.add('hidden');
            });

            // Add selected state to clicked option
            this.classList.add('selected');
            this.querySelector('.w-3.h-3').classList.remove('hidden');
        });
    });

    // Quantity buttons
    const quantityButtons = document.querySelectorAll('[class*="rounded-full"] button');
    quantityButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const parent = this.parentElement;
            const quantitySpan = parent.querySelector('span');
            let quantity = parseInt(quantitySpan.textContent);

            if (this.textContent.trim() === '+') {
                quantity++;
            } else if (this.textContent.trim() === '-' && quantity > 1) {
                quantity--;
            }

            quantitySpan.textContent = quantity;
        });
    });

    // Remove item from cart
    const removeButtons = document.querySelectorAll('[class*="fa-times"]');
    removeButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const cartItem = this.closest('.cart-item');
            cartItem.style.opacity = '0';
            setTimeout(() => {
                cartItem.remove();
                // Here you would update the cart total and item count
            }, 300);
        });
    });
</script>