@using EcommerceWeb.Models
@model RegisterViewModel
@{
    ViewData["Title"] = "Authentication Page";
    Layout = "_AuthLayout";
}

<script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    'ai-blue': '#10a37f',
                    'ai-dark': '#202123',
                    'ai-light': '#f7f7f8',
                    'ai-gray': '#343541',
                }
            }
        }
    }
</script>
<style>
    .gradient-bg {
        background: linear-gradient(135deg, #10a37f 0%, #1a73e8 100%);
    }

    .animated-text {
        background: linear-gradient(90deg, #10a37f, #1a73e8, #10a37f);
        background-size: 200% auto;
        color: transparent;
        -webkit-background-clip: text;
        background-clip: text;
        animation: shine 3s linear infinite;
    }

    @@keyframes shine {
        to {
            background-position: 200% center;
        }
    }

    .auth-container {
        box-shadow: 0 25px 50px -12px rgba(16, 163, 127, 0.25);
    }

    .input-field:focus {
        border-color: #10a37f;
        box-shadow: 0 0 0 3px rgba(16, 163, 127, 0.2);
    }

    .toggle-btn.active {
        background-color: #10a37f;
        color: white;
    }

    .social-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .floating-label {
        top: 50%;
        transform: translateY(-50%);
        transition: all 0.2s ease;
        pointer-events: none;
    }

        .floating-label.focused, .floating-label.has-value {
            top: 0;
            transform: translateY(-50%) scale(0.85);
            background-color: white;
            padding: 0 0.25rem;
            left: 0.75rem;
            color: #10a37f;
        }

    .relative span{
        display:block;
    }
</style>
<!-- Main Content -->
<main class="flex-grow flex items-center justify-center py-12 px-4">
    <div class="w-full max-w-6xl mx-auto">
        <div class="flex flex-col md:flex-row rounded-xl overflow-hidden bg-white auth-container">
            <!-- Left Side - Branding -->
            <div class="w-full md:w-1/2 gradient-bg text-white p-8 md:p-12 flex flex-col justify-center">
                <div class="mb-8">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">Welcome to OpenTrade</h2>
                    <p class="text-lg opacity-90">Join the AI-powered global marketplace connecting businesses with intelligent sourcing solutions.</p>
                </div>

                <div class="space-y-4 mt-8">
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center mr-4">
                            <i class="fas fa-robot text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold">AI-Powered Sourcing</h4>
                            <p class="text-sm opacity-80">Find the best suppliers with our intelligent assistant</p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center mr-4">
                            <i class="fas fa-globe-americas text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold">Global Network</h4>
                            <p class="text-sm opacity-80">Connect with verified suppliers worldwide</p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center mr-4">
                            <i class="fas fa-shield-alt text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold">Secure Transactions</h4>
                            <p class="text-sm opacity-80">Trade with confidence using our protection</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Auth Forms -->
            <div class="w-full md:w-1/2 p-8 md:p-12">
                
                <!-- Register Form (Hidden by default) -->
                <form asp-controller="Authentication" asp-action="Register" method="post" id="registerForm" class="space-y-6">
                    <div class="text-center mb-6">
                        <h3 class="text-2xl font-bold text-ai-dark mb-2">Create Account</h3>
                        <p class="text-gray-600">Join OpenTrade to access AI-powered sourcing</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="relative">
                            <span asp-validation-for="FirstName" class="text-sm text-red-600 mb-1"></span>
                            <input asp-for="FirstName" class="w-full py-3 px-4 border border-gray-300 rounded-lg input-field focus:outline-none" />
                            <label for="FirstName" class="floating-label left-4 text-gray-500">First Name</label>                           
                        </div>
                        <div class="relative">
                            <span asp-validation-for="LastName" class="text-sm text-red-600 mb-1"></span>
                            <input asp-for="LastName" class="w-full py-3 px-4 border border-gray-300 rounded-lg input-field focus:outline-none" />
                            <label for="LastName" class="floating-label left-4 text-gray-500">Last Name</label>
                            
                        </div>
                    </div>

                    <div class="relative">
                        <span asp-validation-for="Email" class="text-sm text-red-600 mb-1"></span>
                        <input asp-for="Email" class="w-full py-3 px-4 border border-gray-300 rounded-lg input-field focus:outline-none" />
                        <label for="Email" class="floating-label left-4 text-gray-500">Email Address</label>
                                            
                    </div>

                    <div class="relative">
                        <span asp-validation-for="Companyname" class="text-sm text-red-600 mb-1"></span>
                        <input asp-for="Companyname" class="w-full py-3 px-4 border border-gray-300 rounded-lg input-field focus:outline-none" />
                        <label for="Companyname" class="floating-label left-4 text-gray-500">Company Name</label>
                    </div>


                    <div class="relative">
                        <span asp-validation-for="PhoneNumber" class="text-sm text-red-600 mb-1"></span>
                        <input asp-for="PhoneNumber" class="w-full py-3 px-4 border border-gray-300 rounded-lg input-field focus:outline-none" />
                        <label for="PhoneNumber" class="floating-label left-4 text-gray-500">PhoneNumber</label>
                    </div>

                    <div class="relative">
                        <span asp-validation-for="Address" class="text-sm text-red-600 mb-1"></span>
                        <input asp-for="Address" class="w-full py-3 px-4 border border-gray-300 rounded-lg input-field focus:outline-none" />
                        <label for="Address" class="floating-label left-4 text-gray-500">Address</label>

                    </div>

                    <div class="relative">
                        <span asp-validation-for="Password" class="text-sm text-red-600 mb-1"></span>
                        <input asp-for="Password" type="password" class="w-full py-3 px-4 border border-gray-300 rounded-lg input-field focus:outline-none" />
                        <label for="Password" class="floating-label left-4 text-gray-500">Password</label>
                        <button type="button" style="transform: translate(0,-100%)" class="absolute right-3 top-1/2 text-gray-500">
                            <i class="far fa-eye-slash"></i>
                        </button>
                    </div>

                    <div class="relative">
                        <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600 mb-1"></span>
                        <input asp-for="ConfirmPassword" type="password" class="w-full py-3 px-4 border border-gray-300 rounded-lg input-field focus:outline-none" />
                        <label for="ConfirmPassword" class="floating-label left-4 text-gray-500">Confirm Password</label>                        
                    </div>

                    <div class="flex items-center">
                        <input type="checkbox" id="terms" class="h-4 w-4 text-ai-blue focus:ring-ai-blue border-gray-300 rounded" required />
                        <label for="terms" class="ml-2 block text-sm text-gray-700">
                            I agree to the <a href="#" class="text-ai-blue hover:underline">Terms of Service</a> and <a href="#" class="text-ai-blue hover:underline">Privacy Policy</a>
                        </label>
                    </div>

                    <button type="submit" class="w-full gradient-bg text-white py-3 px-4 rounded-lg font-medium hover:opacity-90 transition">
                        Create Account
                    </button>

                    <div class="relative flex items-center py-4">
                        <div class="flex-grow border-t border-gray-300"></div>
                        <span class="flex-shrink mx-4 text-gray-500 text-sm">OR SIGN UP WITH</span>
                        <div class="flex-grow border-t border-gray-300"></div>
                    </div>

                    <div class="grid grid-cols-3 gap-3">
                        <button type="button" class="social-btn flex items-center justify-center py-2 px-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                            <i class="fab fa-google text-red-500 mr-2"></i>
                        </button>
                        <button type="button" class="social-btn flex items-center justify-center py-2 px-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                            <i class="fab fa-linkedin-in text-blue-600 mr-2"></i>
                        </button>
                        <button type="button" class="social-btn flex items-center justify-center py-2 px-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                            <i class="fab fa-apple text-gray-800 mr-2"></i>
                        </button>
                    </div>
                </form>

            </div>
        </div>

        <div class="text-center mt-6 text-gray-600">
            <p id="toggleText">Already have an account? <a asp-controller="Authentication" asp-action="Index" class="text-ai-blue font-medium hover:underline">Login</a></p>
        </div>
    </div>
</main>

<script>
   
    const registerForm = document.getElementById('registerForm');
 
    // Floating label functionality
    const inputs = document.querySelectorAll('input');
    inputs.forEach(input => {
        const label = document.querySelector(`label[for="${input.id}"]`);
        if(label == null){
            return;
        }
        input.addEventListener('focus', () => {
            label.classList.add('focused');
        });

        input.addEventListener('blur', () => {
            if (!input.value) {
                label.classList.remove('focused');
            }
        });

        // Check if input has value on page load
        if (input.value) {
            label.classList.add('focused', 'has-value');
        }

        input.addEventListener('input', () => {
            if (input.value) {
                label.classList.add('has-value');
            } else {
                label.classList.remove('has-value');
            }
        });
    });

    // Toggle password visibility
    const passwordInputs = document.querySelectorAll('input[type="password"]');
    passwordInputs.forEach(input => {
        const toggleBtn = input.nextElementSibling.nextElementSibling;
        if (toggleBtn && toggleBtn.tagName === 'BUTTON') {
            toggleBtn.addEventListener('click', () => {
                const icon = toggleBtn.querySelector('i');
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                }
            });
        }
    });
</script>