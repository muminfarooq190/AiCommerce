                                    <img src="https://cdn-icons-png.flaticon.com/512/196/196566.png" alt="Mastercard" class="h-6">
                                    <img src="https://cdn-icons-png.flaticon.com/512/196/196561.png" alt="Amex" class="h-6">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="payment-method flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer">
                        <div class="w-6 h-6 rounded-full border-2 border-gray-300 flex items-center justify-center mr-4">
                            <div class="w-3 h-3 rounded-full bg-ai-blue hidden"></div>
                        </div>
                        <div class="flex-1">
                            <div class="flex items-center justify-between">
                                <h3 class="font-medium">PayPal</h3>
                                <img src="https://cdn-icons-png.flaticon.com/512/196/196566.png" alt="PayPal" class="h-6">
                            </div>
                        </div>
                    </div>

