<script>
    // Star rating functionality
    document.querySelectorAll('[id^="rating"]').forEach(ratingContainer => {
        const stars = ratingContainer.querySelectorAll('.rating-star');

        stars.forEach(star => {
            star.addEventListener('click', () => {
                const rating = parseInt(star.getAttribute('data-rating'));

                // Reset all stars
                stars.forEach(s => s.classList.remove('active'));

                // Highlight selected stars
                for (let i = 0; i < rating; i++) {
                    stars[i].classList.add('active');
                }
            });

            // Hover effect
            star.addEventListener('mouseover', () => {
                const hoverRating = parseInt(star.getAttribute('data-rating'));

                stars.forEach(s => {
                    const sRating = parseInt(s.getAttribute('data-rating'));
                    if (sRating <= hoverRating) {
                        s.style.color = '#f59e0b';
                    }
                });
            });

            star.addEventListener('mouseout', () => {
                stars.forEach(s => {
                    if (!s.classList.contains('active')) {
                        s.style.color = '#e2e8f0';
                    }
                });
            });
        });
    });

    // File upload interaction
    document.querySelectorAll('[id^="fileInput"]').forEach((input, index) => {
        const dropZone = input.previousElementSibling;

        dropZone.addEventListener('click', () => {
            input.click();
        });

        input.addEventListener('change', (e) => {
            if (e.target.files.length) {
                dropZone.innerHTML = `
                    <div class="flex items-center justify-center">
                        <i class="fas fa-check-circle text-green-500 text-xl mr-2"></i>
                        <span class="text-sm font-medium">${e.target.files[0].name}</span>
                    </div>
                `;
            }
        });

        // Drag and drop functionality
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            dropZone.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, unhighlight, false);
        });

        function highlight() {
            dropZone.classList.add('border-blue-500', 'bg-blue-50');
        }

        function unhighlight() {
            dropZone.classList.remove('border-blue-500', 'bg-blue-50');
        }

        dropZone.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            input.files = files;

            if (files.length) {
                dropZone.innerHTML = `
                    <div class="flex items-center justify-center">
                        <i class="fas fa-check-circle text-green-500 text-xl mr-2"></i>
                        <span class="text-sm font-medium">${files[0].name}</span>
                    </div>
                `;
            }
        }
    });

    // Place order button
    document.querySelector('button.bg-green-600').addEventListener('click', () => {
        alert('Thank you for your order! Your items will be processed and shipped soon.');
    });
</script>   